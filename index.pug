include data/customersList.pug

doctype html
html(lang="en")
  include components/head.pug
  body
    .wrapper
      .container
        main.main-wrapper
          .greeting
            p.greeting__text Hello Evano üëãüèº,
          .content
            .content-header
              .content-header-desc
                h2.content-header-title All Customers
                p.content-header-subtitle Active Members
              .content-header-search
                label.content-header-search__label(for="search")
                  include img/icons/search.svg
                input.content-header-search__input(type="text", placeholder="Search", id="search")
            .table-wrapper
              table.table
                thead.table-header
                  tr.table-header-row            
                    th.table-header__column Customer Name
                    th.table-header__column Company
                    th.table-header__column Phone Number
                    th.table-header__column Email
                    th.table-header__column Country
                    th.table-header__column Status
                tbody.table-body
                  each obj in customers
                    tr.table-body-row
                      each val in obj
                        case val
                          when "Active"
                            td.table-body__column
                              .table-body__column_active=val
                          when "Inactive"
                            td.table-body__column
                              .table-body__column_inactive=val
                          default
                            td.table-body__column=val
            .content-footer
              p.content-footer__amount Showing data 1 to 8 of 256K entries
              nav
                ul.content-footer-pagination
                  li
                    a(href="#", class="content-footer__btn") 
                      span <
                  li
                    a(href="#", class="content-footer__btn content-footer__btn_active") 
                      span 1
                  li
                    a(href="#", class="content-footer__btn") 
                      span 2
                  li
                    a(href="#", class="content-footer__btn") 
                      span 3
                  li
                    a(href="#", class="content-footer__btn") 
                      span 4
                  span.content-footer__breadcrumbs ...
                  li
                    a(href="#", class="content-footer__btn") 
                      span 40
                  li
                    a(href="#", class="content-footer__btn") 
                      span >
        .sidebar
          .logo
            .logo-wrapper
              .logo__img
                include img/icons/site-logo.svg
              .logo__text Dashboard
            .logo__version v.01
          .menu-list-wrapper
            nav
              ul.menu-list
                li
                  a.menu-list__item
                    .menu-text-icon-wrapper
                      .menu-list__icon
                        include img/icons/key.svg
                      span.menu-list__text Dashboard
                li
                  a.menu-list__item
                    .menu-text-icon-wrapper
                      .menu-list__icon
                        include img/icons/3d-square.svg
                      span.menu-list__text Product
                    .menu-list__icon-shevron
                        include img/icons/shevron-right.svg
                li
                  a.menu-list__item.menu-list__item_active
                    .menu-text-icon-wrapper
                      .menu-list__icon
                        include img/icons/user-square.svg
                      span.menu-list__text Customers
                    .menu-list__icon-shevron
                        include img/icons/shevron-right.svg
                li
                  a.menu-list__item
                    .menu-text-icon-wrapper
                      .menu-list__icon
                        include img/icons/wallet.svg
                      span.menu-list__text Income
                    .menu-list__icon-shevron
                        include img/icons/shevron-right.svg
                li
                  a.menu-list__item
                    .menu-text-icon-wrapper
                      .menu-list__icon
                        include img/icons/discount.svg
                      span.menu-list__text Promote
                    .menu-list__icon-shevron
                        include img/icons/shevron-right.svg
                li
                  a.menu-list__item
                    .menu-text-icon-wrapper
                      .menu-list__icon
                        include img/icons/message-question.svg
                      span.menu-list__text Help
                    .menu-list__icon-shevron
                      include img/icons/shevron-right.svg
          .admin-logo-wrapper
            .admin-logo
              .admin-logo__img
                img(src="../img/admin.png" alt="admin name")
              .admin-info
                span.admin-logo__name Evano
                span.admin-logo__role Project Manager
        .sidebar-mobile
          include img/icons/site-logo.svg